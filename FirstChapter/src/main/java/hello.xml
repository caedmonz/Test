<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="greetingService1" class="org.spring.springinaction.FirstChapter.hello.GreetingServiceImpl">
		<property name="greeting">
			<value>Buenos Dias set!</value>
		</property>
	</bean>
	<bean id="greetingService2" class="org.spring.springinaction.FirstChapter.hello.GreetingServiceImpl">
		<constructor-arg>
			<value>Buenos Dias constructor!</value>
		</constructor-arg>
	</bean>
</beans>